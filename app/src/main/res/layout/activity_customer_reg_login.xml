<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reglog"
    tools:context=".CustomerRegLoginActivity">

    <TextView
        android:id="@+id/statusCustomer"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="188dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Вход для клиента!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVEmailCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        android:text="E-mail "
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@id/statusCustomer"
        />

    <EditText
        android:id="@+id/customerEmail"
        android:layout_width="440sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVEmailCustomer"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="abc@gmail.com"
        android:inputType="textNoSuggestions"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVPasswordCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerEmail"
        android:layout_centerVertical="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="15dp"
        android:text="Пароль"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/customerPassword"
        android:layout_width="440sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVPasswordCustomer"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/signInCustomer"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_below="@id/customerPassword"
        android:background="@drawable/btn_temp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="@string/signIn" />

    <Button
        android:id="@+id/signUpCustomer"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_temp"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/accountCreateCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInCustomer"
        android:layout_marginStart="63dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/TVYetCustomer"
        android:text="Зарегистрироваться"
        android:textColor="#F9C663"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TVYetCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInCustomer"
        android:layout_marginStart="41dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Ещё нет аккаунта?"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />



</RelativeLayout>